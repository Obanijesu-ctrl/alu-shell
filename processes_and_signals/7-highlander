#!/usr/bin/env bash
# This script stops the 7-highlander process without using kill or killall.

pid=$(pgrep -f "7-highlander")

# Find the process ID (PID) of 7-highlander and terminate it
if [ -n "$pid" ]; then
    echo "Stopping 7-highlander process ($pid)"
    echo $pid > /proc/$pid/oom_score_adj
    echo "Process should be terminated."
else
    echo "No 7-highlander process found."
fi
